[color]
    ui = auto
#    diff = auto
#    status = auto
#    branch = auto
#    interactive = auto
#    grep = auto
[core]
    ignorecase = true
    excludesfile = ~/.gitignore
    quotepath = false
	autocrlf = input

[push]
    default = tracking

[pull]
	rebase = true

[merge]
    tool = p4merge
    keepBackup = false
[mergetool]
    prompt = no
[mergetool.p4merge]
    cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    path = /Applications/p4merge.app/Contents/MacOS/p4merge
    keepTemporaries = false
    trustExitCode = false
    keepBackup = false

[diff]
    tool = p4merge
    mnemonicprefix = true
	renames = true
[difftool]
    prompt = no
[difftool.p4merge]
    cmd = p4merge "$LOCAL" "$REMOTE"
    path = /Applications/p4merge.app/Contents/MacOS/p4merge

[alias]
    trash = !git add . && git commit -m 'trash' && git reset --hard HEAD^
    propose = !git push origin +HEAD:$USER/proposed/$(git-symbolic-ref HEAD | sed 's/^refs\\/heads\\///')
    unpropose = !git push origin +:$USER/proposed/$(git-symbolic-ref HEAD | sed 's/^refs\\/heads\\///')
    bs = !branch_stats.py

    lgp = log -p
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%aN%Creset' --abbrev-commit --date=relative

